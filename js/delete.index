<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Phone Chaser</title>

	<!-- External CSS -->
	<link rel="stylesheet" href="css/style.css">
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
	<!-- Header -->
	<header class="container">
		<h2 class="text-center my-4 fw-bold">Phone Chaser</h2>
	</header>
	
	<main>
		<!-- Search Box Section -->
		<section class="container my-4">
			<div id="search" class="input-group mb-3 w-50 mx-auto">
				<input id="search-field" type="text" class="form-control" placeholder="Search Your Favourite Phone" aria-label="Search Your Favourite Phone" aria-describedby="button-addon2">
				<button class="btn btn-outline-secondary" type="button" id="button-search" onclick="loadSearchResult()">Search</button>
			</div>

			<!-- Search item not found -->
			<div>
				<h5 id="search-not-found" class="fs-6 text-center">No Phone Founded!!!</h5>
			</div>
		</section>

		<section id="spinnner-below-search" class="container mx-auto my-5">
			<div class="d-flex justify-content-center">
				<div class="spinner-border text-dark text-center" role="status">
					<span class="visually-hidden">Loading...</span>
				</div>
			</div>
		</section>

		<!-- Search Result Details Seciton -->
		<section class="container">
			<div id="phone-details">
				
			</div>
		</section>

		<!-- Search Result Section -->
		<section class="container my-5" id="search-result">
			<div id="result-card" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
			</div>
			<div class="d-flex justify-content-center my-5" >
				<button class="btn btn-dark py-2 px-3" id="load-more-button" onclick="loadSearchResult(false)">Load More</button>
			</div>
		</section>
		<section id="spinnner-below-load-more" class="container mx-auto my-5">
			<div class="d-flex justify-content-center">
				<div class="spinner-border text-dark text-center" role="status">
					<span class="visually-hidden">Loading...</span>
				</div>
			</div>
		</section>

	</main>

	<!-- External JS -->
	<script src="js/script.js"></script>
	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>